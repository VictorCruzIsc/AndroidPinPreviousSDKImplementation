<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#eaeaea" android:startColor="#eaeaea" android:type="linear" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#eaeaea" android:startColor="#eaeaea" android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" />
        </shape>
    </item>
</selector>